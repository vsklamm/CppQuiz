<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>

        <item name="android:buttonStyle">@style/LightThemeButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardViewStyle">@style/CardView</item>

        <item name="android:buttonStyle">@style/LightThemeButton</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorAccent">@color/colorDarkAccent</item>

        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="LightThemeButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/btn_answer_default</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
